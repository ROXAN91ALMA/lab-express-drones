<h2>Update the drone</h2>


<form action="/drones/{{drone.id}}/edit" method="POST">

<div>
    <label for="name">Name of the drone</label> 
    <input value="{{drone.name}}" id = "name" type="text" name="name" placeholder="fill this field with a name" required/>
</div>

<div>
    <label for="propellers">Number of the propellers</label> 
    <input value="{{drone.propellers}}" id = "propellers" type="number" name="propellers" required min="1"/>
</div>

<div>
    <label for="maxSpeed"> Max Speed</label> 
    <input value="{{drone.maxSpeed}}" id = "maxSpeed" type="number" name="maxSpeed" required min="1"/>
</div>

<button>Update drone</button>

</form>